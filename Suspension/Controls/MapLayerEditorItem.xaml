<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Suspension.Controls.MapLayerEditorItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Suspension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:convert="using:CommunityToolkit.WinUI.UI.Converters"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Visibility x:Key="Visible">Visible</Visibility>
        <Visibility x:Key="Collapsed">Collapsed</Visibility>

        <convert:BoolToObjectConverter x:Key="BoolToVisConvert"
                                       TrueValue="{StaticResource Visible}" FalseValue="{StaticResource Collapsed}" />
        <convert:BoolToObjectConverter x:Key="InvertedBoolToVisConvert"
                                       TrueValue="{StaticResource Collapsed}" FalseValue="{StaticResource Visible}" />
        
        <Style x:Key="TransparentButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>

    <Grid Background="{ThemeResource CardBackgroundFillColorDefault}"
          BorderBrush="{ThemeResource CardStrokeColorDefault}" BorderThickness="1"
          CornerRadius="4" Padding="16">
        <Grid Visibility="{x:Bind IsEditing, Converter={StaticResource InvertedBoolToVisConvert}, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="{x:Bind Source.Host, Mode=OneWay}" />
            <TextBlock Text="{x:Bind Source, Mode=OneWay}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"
                       Foreground="{ThemeResource TextFillColorSecondary}" Style="{StaticResource CaptionTextBlockStyle}"
                       Grid.Row="1" />

            <Button Padding="6" Margin="8,0,0,0"
                    Style="{StaticResource TransparentButtonStyle}"
                    Click="EditButton_Click"
                    ToolTipService.ToolTip="Edit"
                    Grid.Column="1" Grid.RowSpan="2">
                <FontIcon Glyph="&#xE70F;" />
            </Button>
            <Button Padding="6,6,4,5" Margin="8,0,0,0"
                    Style="{StaticResource TransparentButtonStyle}"
                    Visibility="{x:Bind RemoveButtonVisibility}"
                    Click="RemoveButton_Click"
                    ToolTipService.ToolTip="Remove"
                    Grid.Column="2" Grid.RowSpan="2">
                <FontIcon Glyph="&#xE894;" FontSize="22" />
            </Button>
        </Grid>

        <Grid ColumnSpacing="8" Visibility="{x:Bind IsEditing, Converter={StaticResource BoolToVisConvert}, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="sourceBox" Text="{x:Bind Source, Mode=OneWay}" PlaceholderText="URL" TextChanged="SourceBox_TextChanged" />

            <Button x:Name="acceptButton"
                    Padding="6"
                    Style="{StaticResource TransparentButtonStyle}"
                    Click="AcceptButton_Click"
                    ToolTipService.ToolTip="Accept"
                    Grid.Column="1">
                <FontIcon Glyph="&#xE8FB;" FontSize="22" />
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="Transparent" />
                </Button.Resources>
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Enter" />
                </Button.KeyboardAccelerators>
            </Button>

            <Button Padding="6,6,4,5"
                    Style="{StaticResource TransparentButtonStyle}"
                    Click="CancelButton_Click"
                    ToolTipService.ToolTip="Cancel"
                    Grid.Column="2">
                <FontIcon Glyph="&#xE894;" FontSize="22" />
            </Button>

            <TeachingTip x:Name="acceptTip" Target="{x:Bind acceptButton}" />
        </Grid>
    </Grid>
</UserControl>
