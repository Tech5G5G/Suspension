<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Suspension.Controls.MapLayerEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Suspension.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="items" SelectionMode="None" AllowDrop="True" CanReorderItems="True" Margin="-3,0" ItemsSource="{x:Bind uris}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource DefaultListViewItemStyle}">
                    <Setter Property="Padding" Value="3,0" />
                    <Setter Property="Margin" Value="0,0,0,4" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <local:MapLayerEditorItem x:Name="baseItem"
                                  RemoveButtonVisibility="Collapsed"
                                  Margin="0,0,0,4"
                                  Source="{x:Bind BaseLayer, Mode=OneWay}"
                                  SourceChanged="BaseItem_SourceChanged"
                                  Grid.Row="1" />

        <Grid Grid.Row="2">
            <Button x:Name="addButton"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    Padding="6"
                    Click="AddButton_Click">
                <FontIcon Glyph="&#xE710;" />
            </Button>
            <local:MapLayerEditorItem x:Name="addItem"
                                      IsEditing="True"
                                      RemoveButtonVisibility="Collapsed" Visibility="Collapsed"
                                      SourceChanged="AddItem_SourceChanged" SourceChangeCanceled="AddItem_SourceChangeCanceled" />
        </Grid>
    </Grid>
</UserControl>
